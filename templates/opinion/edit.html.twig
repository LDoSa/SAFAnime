{% extends 'base.html.twig' %}

{% block title %}Editar Opinión{% endblock %}

{% block body %}

    <div class="max-w-xl mx-auto px-6 py-12">

        <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">
            Editar opinión
        </h1>

        <div class="bg-violet-200 border border-violet-400 rounded-xl shadow-lg p-8 mb-8">
            {{ include('opinion/_form.html.twig', {'button_label': 'Actualizar'}) }}
        </div>

        <div class="flex justify-between items-center mt-6">

            <a href="{{ path('app_opinion_index') }}"

{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

    <div class="container mx-auto px-6 py-12">

        <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">
            {{ category.name }}
        </h1>

        {# Botones de ranking del usuario #}
        {% if app.user %}
            {% set userRanking = category.rankings|filter(r => r.user.id == app.user.id)|first %}

            {% if not userRanking %}
                <a href="{{ path('app_ranking_new', {'id': category.id}) }}"
                   class="px-5 py-2.5 rounded-lg bg-violet-500 hover:bg-violet-600 text-white font-medium shadow transition">
                    Crear mi ranking
                </a>
            {% else %}
                <a href="{{ path('app_ranking_edit', {'id': userRanking.id}) }}"
                   class="px-5 py-2.5 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium shadow transition">
                    Editar mi ranking
                </a>
                <form method="post" action="{{ path('app_ranking_delete', {'id': userRanking.id}) }}"
                      onsubmit="return confirm('¿Seguro que quieres borrar tu ranking?');" class="inline-block">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userRanking.id) }}">
                    <button class="px-5 py-2.5 rounded-lg bg-red-600 hover:bg-red-700 text-white font-medium shadow transition">
                        Borrar mi ranking
                    </button>
                </form>
            {% endif %}
        {% endif %}

        {# ⭐ SI HAY RANKINGS → MOSTRAR ORDENADOS ⭐ #}
        {% if ranking is not empty %}

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 mt-10">
                {% for item in ranking %}
                    {% set anime = item['anime'] %}
                    {% set avgPosition = item['avgPosition'] %}

                    <div class="p-4 flex flex-col items-center text-center bg-white rounded-xl shadow">

                        <div class="text-2xl font-bold text-violet-600 mb-2">
                            #{{ loop.index }}
                        </div>

                        {% if anime.imagen %}
                            <a href="{{ path('app_anime_show', {'id': anime.id}) }}">
                                <img src="{{ anime.imagen }}"
                                     alt="{{ anime.titulo }}"
                                     class="w-full h-60 object-cover rounded-lg shadow mb-4">
                            </a>
                        {% endif %}

                        <h2 class="text-xl font-semibold text-gray-900 mb-2">
                            {{ anime.titulo }}
                        </h2>

                        <p class="text-gray-600 mb-3">
                            Puesto medio: {{ avgPosition|number_format(2, '.', ',') }}
                        </p>

                        <a href="{{ path('app_anime_show', {'id': anime.id}) }}"
                           class="mt-auto px-4 py-2 rounded-lg bg-violet-500 hover:bg-violet-600 text-white font-medium shadow transition">
                            Ver detalles
                        </a>

                    </div>
                {% endfor %}
            </div>

        {% else %}

            {# ⭐ NO HAY RANKINGS → MOSTRAR ANIMES DE LA CATEGORÍA ⭐ #}

            <p class="text-center text-gray-700 text-lg mt-10 mb-8">
                No hay rankings en esta categoría todavía.
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                {% for anime in category.animes %}
                    <div class="p-4 flex flex-col items-center text-center bg-white rounded-xl shadow">

                        {% if anime.imagen %}
                            <a href="{{ path('app_anime_show', {'id': anime.id}) }}">
                                <img src="{{ anime.imagen }}"
                                     alt="{{ anime.titulo }}"
                                     class="w-full h-60 object-cover rounded-lg shadow mb-4">
                            </a>
                        {% endif %}

                        <h2 class="text-xl font-semibold text-gray-900 mb-2">
                            {{ anime.titulo }}
                        </h2>

                        <a href="{{ path('app_anime_show', {'id': anime.id}) }}"
                           class="mt-auto px-4 py-2 rounded-lg bg-violet-500 hover:bg-violet-600 text-white font-medium shadow transition">
                            Ver detalles
                        </a>

                    </div>
                {% endfor %}
            </div>

        {% endif %}

        <div class="text-center mt-12">
            <a href="{{ path('app_category_index') }}"
               class="px-6 py-3 rounded-lg bg-gray-700 hover:bg-gray-800 text-white font-medium shadow transition">
                Volver a categorías
            </a>
        </div>

    </div>

{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block body %}
    <div class="flex justify-center mt-16 mb-20 text-violet-900">

        <div class="rounded-2xl p-8">

            <h1 class="text-3xl font-bold text-center mb-6">
                Iniciar sesión
            </h1>

            {% if error %}
                <div class="mb-4 bg-red-100 text-red-700 px-4 py-2 rounded-lg border border-red-300">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-center bg-violet-50 border border-violet-200 p-3 rounded-lg">
                    Ya has iniciado sesión como <strong>{{ app.user.userIdentifier }}</strong>.
                    <a href="{{ logout_path() }}" class="text-violet-600 font-semibold hover:underline">
                        Cerrar sesión
                    </a>
                </div>
            {% endif %}

            <form method="post" class="space-y-4">

                <div>
                    <label for="username" class="font-medium">Email</label>
                    <input type="email"
                           value="{{ last_username }}"
                           name="_username"
                           id="username"
                           autocomplete="email"
                           required
                           autofocus
                           class="w-full mt-1 px-4 py-2 border border-violet-300 rounded-lg focus:ring-violet-500 focus:border-violet-500">
                </div>

                <div>
                    <label for="password" class="font-medium">Contraseña</label>
                    <input type="password"
                           name="_password"
                           id="password"
                           autocomplete="current-password"
                           required
                           class="w-full mt-1 px-4 py-2 border border-violet-300 rounded-lg focus:ring-violet-500 focus:border-violet-500">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit"
                        class="mt-12 w-full bg-violet-500 text-white py-2 rounded-lg font-medium hover:bg-violet-600 transition">
                    Entrar
                </button>
            </form>

            <p class="text-center text-sm mt-4">
                ¿No tienes cuenta?
                <a href="{{ path('app_register') }}" class="text-violet-600 font-semibold hover:underline">
                    Regístrate aquí
                </a>
            </p>

        </div>

    </div>
{% endblock %}

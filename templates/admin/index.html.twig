{% extends 'base.html.twig' %}

{% block title %}Panel de Administración{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 py-12">

        <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">
            Panel de Administración
        </h1>

        <h2 class="text-2xl font-semibold text-violet-700 mb-6">
            Usuarios registrados
        </h2>

        {% if users is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

                {% for user in users %}
                    <div class="bg-white border border-violet-300 rounded-xl shadow-md p-6 hover:shadow-lg transition">

                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-12 h-12 bg-violet-500 text-white rounded-full flex items-center justify-center font-bold text-xl">
                                {{ user.email|first|upper }}
                            </div>

                            <div>
                                <h3 class="font-bold text-lg text-gray-900">{{ user.email }}</h3>
                                <p class="text-gray-600 text-sm">ID: {{ user.id }}</p>
                            </div>
                        </div>

                        <p class="text-gray-700 mb-4">
                            <span class="font-semibold">Roles:</span>
                            <span class="text-violet-700">{{ user.roles|join(', ') }}</span>
                        </p>

                        <a href="{{ path('app_admin_user_opinions', {'id': user.id}) }}"
                           class="block text-center px-4 py-2 bg-violet-600 hover:bg-violet-700 text-white rounded-lg shadow transition">
                            Ver opiniones
                        </a>
                    </div>
                {% endfor %}

            </div>
        {% else %}
            <p class="text-gray-600">No hay usuarios registrados.</p>
        {% endif %}

    </div>
{% endblock %}

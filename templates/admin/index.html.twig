{% extends 'base.html.twig' %}

{% block title %}Panel de Administración{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 py-12">

        <h1 class="text-4xl font-bold mb-8">Panel de Administración</h1>

        <h2 class="text-2xl font-semibold mb-4">Usuarios registrados</h2>

        {% if users is not empty %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for user in users %}
                    <div class="bg-white rounded-xl shadow p-4">
                        <h3 class="font-bold text-lg">{{ user.email }}</h3>
                        <p class="text-gray-600">ID: {{ user.id }}</p>
                        <p class="text-gray-600">Roles: {{ user.roles|join(', ') }}</p>

                        <a href="{{ path('app_admin_user_opinions', {'id': user.id}) }}"
                           class="mt-2 inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow">
                            Ver opiniones
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No hay usuarios registrados.</p>
        {% endif %}

    </div>
{% endblock %}
